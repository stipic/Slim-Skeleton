{% include 'Inc/top_nav.twig' %}

<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Jezici</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="{{ '' | acp_base }}">Dashboard</a></li>
                <li class="active">Jezici</li>
            </ol>
        </div>
    </div>

    <div class="row">
		<div class="col-md-12">

			<div class="white-box">
				<h3 class="box-title m-b-0">Upravljanje jezikom</h3>
				<p class="text-muted m-b-30">Odaberite jezik koji želite uređivati. <br />Ako je bilo statičkih ili programskih promjena na stranici u tom slučaju prije uređivanja obavezno skenirajte nove poruke.</p>                            
                
                <div class="form-group">
                	<form action="{{ 'languages/scanMessages' | acp_base }}" method="POST">
						<button class="btn btn-alert" type="submit">Skeniraj nove poruke</button>
					</form>
					<!--<label>Zadnji put skenirano: 22.01.2017. u 16:35:04</label>-->
                </div>
				
				<p>Izvorni jezik: <b>{{ languages[default_lang].lang_name }}</b></p>
				<hr>

				<form action="{{ 'languages/scanMessages' | acp_base }}" method="POST">
					<label class="control-label">Odaberite jezik koji želite uređivati</label>
					<div class="input-group">
						<select class="form-control" tabindex="1" id="selected_language">
							<option value="0">-- odaberite --</option>
							{% for key, lang in languages %}

								<option value="{{ key }}">{{ lang.lang_name }}</option>
							
							{% endfor %}
						</select>
						<span class="input-group-btn">
							<button class="btn btn-info" id="edit_selected_language">Uredi</button>
						</span>
					</div>
				</form>

			 </div>

		</div>
    </div>
    
</div>